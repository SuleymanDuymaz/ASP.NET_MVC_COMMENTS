@model Entity.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlık Ekleme Sayfası</h2>

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
            {
<div class="form-group">
    @Html.Label("Başlık Adı");
    @Html.TextBoxFor(p => p.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(p => p.HeadingName)

    @Html.Label("Kategori Adı");
    @Html.DropDownListFor(p => p.CategoryId, (List<SelectListItem>)ViewBag.valuecategory,
    new { @class = "form-control" })
    <br />
    @Html.Label("Yazar Adı");
    @Html.DropDownListFor(p => p.WriterID, (List<SelectListItem>)ViewBag.valuewriter,
     new { @class = "form-control" })

    <button class="btn btn-info">Yazar Ekle</button>






</div>



}

