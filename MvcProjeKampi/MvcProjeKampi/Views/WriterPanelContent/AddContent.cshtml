@model Entity.Concrete.Content  
@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Yeni İçerik Ekleme Sayfası</h2>

@using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" name="HeadingID" value="@ViewBag.d" />
        <br />
        @Html.Label("Başlık Adı");
        @Html.TextAreaFor(p => p.ContentValue, 10,30, new { @class = "form-control" })
        @*@Html.ValidateFor(p => p.HeadingName);*@

       
        <button class="btn btn-info">İçerik Ekle</button>






    </div>



}